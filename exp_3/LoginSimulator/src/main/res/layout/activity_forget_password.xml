<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ForgetPassword">

    <RelativeLayout
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginTop="200dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/pwd_rl">
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/new_pwd_block1">

            <TextView
                android:id="@+id/new_pwd_text1"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="新密码"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/new_pwd1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="请输入你的新密码"
                android:singleLine="true"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/new_pwd_text1"
                android:inputType="numberDecimal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/new_pwd_block1"
            android:id="@+id/new_pwd_block2">

            <TextView
                android:id="@+id/new_pwd_text2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:text="新密码"
                android:textSize="18dp" />
            <EditText
                android:id="@+id/new_pwd2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:hint="请输入你的新密码"
                android:singleLine="true"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/new_pwd_text2"
                android:inputType="numberDecimal"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginTop="10dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@id/new_pwd_block2"
            android:id="@+id/new_pwd_block3">
            <TextView
                android:id="@+id/code_text2"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="验证码："
                android:layout_centerVertical="true"
                android:textSize="18sp"
                />
            <EditText
                android:id="@+id/code2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:hint="请输入按揭百分比"
                android:singleLine="true"
                android:textSize="16dp"
                android:padding="5dp"
                android:gravity="right"
                android:layout_toRightOf="@+id/code_text2"
                android:layout_toLeftOf="@+id/code_btn2"
                android:inputType="numberDecimal"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textSize="18sp"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:layout_alignParentEnd="true"
                android:id="@+id/code_btn2" />
        </RelativeLayout>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/new_pwd_block3"
            android:layout_margin="25dp"
            android:text="确认"
            android:textSize="20dp"
            android:id="@+id/new_pwd_btn"
            />
    </RelativeLayout>
</RelativeLayout>